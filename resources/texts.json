			"title": "鹿柴",
			"author": "王維"
		},
		"sentences": [
			{
				"text": "空山不見人",
				"spelling_overrides": {
					"2": "ㄅㄨˊ" 
				}
			},
			{
				"text": "但聞人語響"
			},
			{
				"text": "返景入深林",
				"spelling_overrides": {
					"1": "ㄧㄥˇ" 
				},
				"note": "景通影"
			},
			{
				"text": "復照青苔上"
			}
		]
	},
	{
		"info": {
			"title": "鳥鳴澗",
			"author": "王維"
		},
		"sentences": [
			{
				"text": "人閒桂花落"
			},
			{
				"text": "夜靜春山空"
			},
			{
				"text": "月出驚山鳥"
			},
			{
				"text": "時鳴春澗中"
			}
		]
	},
	{
		"info": {
			"title": "闕題二首·其一",
			"author": "王維"
		},
		"sentences": [
			{
				"text": "荆谿白石出"
			},
			{
				"text": "天寒紅葉稀"
			},
			{
				"text": "山路元無雨"
			},
			{
				"text": "空翠濕人衣"
			}
		]
	},
	{
		"info": {
			"title": "送別",
			"author": "王維"
		},
		"sentences": [
			{
				"text": "下馬飲君酒"
			},
			{
				"text": "問君何所之"
			},
			{
				"text": "君言不得意",
				"spelling_overrides": {
					"2": "ㄅㄨˋ" 
				}
			},
			{
				"text": "歸臥南山陲"
			},
			{
				"text": "但去莫復問"
			},
			{
				"text": "白雲無盡時"
			}
		]
	},
	{
		"info": {
			"title": "山居秋暝",
			"author": "王維"
		},
		"sentences": [
			{
				"text": "空山新雨後"
			},
			{
				"text": "天氣晚來秋"
			},
			{
				"text": "明月松間照"
			},
			{
				"text": "清泉石上流"
			},
			{
				"text": "竹喧歸浣女"
			},
			{
				"text": "蓮動下漁舟"
			},
			{
				"text": "隨意春芳歇"
			},
			{
				"text": "王孫自可留"
			}
		]
	},
	{
		"info": {
			"title": "竹里館",
			"author": "王維"
		},
		"sentences": [
			{
				"text": "獨坐幽篁裏"
			},
			{
				"text": "彈琴復長嘯",
				"spelling_overrides": {
					"0": "ㄊㄢˊ",
					"3": "ㄔㄤˊ"
				}
			},
			{
				"text": "深林人不知",
				"spelling_overrides": {
					"3": "ㄅㄨˋ" 
				}
			},
			{
				"text": "明月來相照"
			}
		]
	},
	{
		"info": {
			"title": "虞美人·杜鵑千里啼春晚",
			"author": "王國維"
		},
		"sentences": [
			{
				"text": "杜鵑千里啼春晚"
			},
			{
				"text": "海門空闊月皚皚"
			},
			{
				"text": "依舊素車白馬夜潮來"
			},
			{
				"text": "山川城郭都非故"
			},
			{
				"text": "恩怨須臾誤"
			},
			{
				"text": "人間孤憤最難平"
			},
			{
				"text": "消得幾回潮落又潮生"
			}
		]
	},
	{
		"info": {
			"title": "喜遷鶯·秋雨霽",
			"author": "王國維"
		},
		"sentences": [
			{
				"text": "秋雨霽"
			},
			{
				"text": "晚煙拖"
			},
			{
				"text": "宮闕與雲摩"
			},
			{
				"text": "片雲流月入明河"
			},
			{
				"text": "鳷鵲散金波"
			},
			{
				"text": "宜春院"
			},
			{
				"text": "披香殿"
			},
			{
				"text": "霧裏梧桐一片",
				"spelling_overrides": {
					"4": "ㄧˊ" 
				}
			},
			{
				"text": "華燈簇處動笙歌",
				"spelling_overrides": {
					"3": "ㄔㄨˋ" 
				}
			},
			{
				"text": "複道屬車過",
				"note": "屬車：帝王出行時的侍從車。借指帝王。"
			}
		]
	},
	{
		"info": {
			"title": "浣溪沙·山寺微茫背夕曛",
			"author": "王國維"
		},
		"sentences": [
			{
				"text": "山寺微茫背夕曛"
			},
			{
				"text": "鳥飛不到半山昏",
				"spelling_overrides": {
					"2": "ㄅㄨˊ" 
				}
			},
			{
				"text": "上方孤磬定行雲",
				"spelling_overrides": {
					"5": "ㄒㄧㄥˊ" 
				}
			},
			{
				"text": "試上高峰窺皓月"
			},
			{
				"text": "偶開天眼覷紅塵"
			},
			{
				"text": "可憐身是眼中人"
			}
		]
	}
	
]
